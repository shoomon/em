# 최상위 EditorConfig 파일
root = true

# 모든 파일에 적용
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80

# Markdown 파일은 trailing whitespace가 의미를 가질 수 있음
[*.md]
trim_trailing_whitespace = false

# JavaScript/TypeScript 관련 파일
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2
quote_type = double
